    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug ts",
            "type": "node",
            "request": "launch",
            "args": [
              "${workspaceRoot}/src/app.ts" // 入口文件
            ],
            "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "name": "debug socket.io",
            "type": "node",
            "request": "launch",
            "args": [
              "${workspaceRoot}/src/TestSocketIo.ts" // socket.io 测试 入口文件
            ],
            "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          }
    ]
}